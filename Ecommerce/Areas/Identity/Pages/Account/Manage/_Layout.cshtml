@{
    // FORZAMOS EL USO DE TU LAYOUT PRINCIPAL
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 md:mt-16 mb-24">

    <div class="mb-8">
        <h1 class="text-3xl font-extrabold text-white">Tu Cuenta</h1>
        <p class="text-gray-400 mt-1">Gestiona tu perfil y configuración de seguridad.</p>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">

        <!-- COLUMNA IZQUIERDA: MENÚ LATERAL -->
        <div class="w-full lg:w-1/4">
            <div class="bg-gray-800 rounded-lg shadow-lg p-4 sticky top-24 border border-gray-700">
                <nav class="space-y-1">
                    <partial name="_ManageNav" />
                </nav>
            </div>
        </div>

        <!-- COLUMNA DERECHA: CONTENIDO DEL FORMULARIO -->
        <div class="w-full lg:w-3/4">
            <!-- Aquí se renderiza el Index.cshtml (el formulario) -->
            @RenderBody()
        </div>

    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
@{
    // Forzamos el uso de tu plantilla principal oscura
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 md:mt-16 mb-20">

    <div class="text-center md:text-left mb-8">
        <h1 class="text-3xl font-extrabold text-white">Tu Cuenta</h1>
        <p class="text-gray-400">Gestiona tu perfil, seguridad y preferencias.</p>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">

        <div class="w-full lg:w-1/4">
            <div class="bg-gray-800 rounded-lg shadow-lg p-4 border border-gray-700 sticky top-24">
                <nav class="space-y-1">
                    <partial name="_ManageNav" />
                </nav>
            </div>
        </div>

        <div class="w-full lg:w-3/4">
            @RenderBody()
        </div>

    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
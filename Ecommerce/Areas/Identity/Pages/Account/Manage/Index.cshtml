@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de Usuario";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!-- Título de la sección derecha -->
<div class="mb-6 border-b border-gray-700 pb-4">
    <h3 class="text-2xl font-bold text-white flex items-center">
        <i class="fas fa-id-card text-accent mr-3"></i> @ViewData["Title"]
    </h3>
    <p class="text-gray-400 text-sm mt-1">Actualiza tu información pública de perfil.</p>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="grid grid-cols-1 lg:grid-cols-2 gap-10">

    <!-- FORMULARIO -->
    <div>
        <form id="profile-form" method="post" class="space-y-6">

            <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm text-red-400 bg-red-900/20 rounded-lg border border-red-800" role="alert"></div>

            <!-- Campo Username -->
            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-300 mb-2">Nombre de Usuario / Email</label>
                <div class="relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-envelope text-gray-500"></i>
                    </div>
                    <input asp-for="Username" class="block w-full pl-10 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-400 focus:ring-0 cursor-not-allowed sm:text-sm" disabled />
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <i class="fas fa-lock text-gray-500" title="No se puede cambiar"></i>
                    </div>
                </div>
            </div>

            <!-- Campo Teléfono -->
            <div>
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-300 mb-2">Número de Teléfono</label>
                <div class="relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-phone text-gray-400"></i>
                    </div>
                    <input asp-for="Input.PhoneNumber" class="block w-full pl-10 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-accent focus:border-transparent transition duration-200 sm:text-sm" placeholder="+51 999 999 999" />
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-red-400 text-xs mt-1 block"></span>
            </div>

            <!-- Botón -->
            <div class="pt-4">
                <button id="update-profile-button" type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-gray-900 bg-accent hover:bg-emerald-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition-all duration-300 transform hover:-translate-y-0.5">
                    <i class="fas fa-save mr-2 mt-0.5"></i> Guardar Cambios
                </button>
            </div>

        </form>
    </div>

    <!-- TARJETA DECORATIVA (Opcional) -->
    <div class="hidden lg:flex flex-col items-center justify-center text-center p-8 bg-gray-700/30 rounded-xl border border-gray-700 border-dashed">
        <div class="w-24 h-24 bg-gray-800 rounded-full flex items-center justify-center mb-4 text-accent border-2 border-accent shadow-lg">
            <span class="text-4xl font-bold select-none">
                @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
            </span>
        </div>
        <h4 class="text-lg font-bold text-white">@User.Identity.Name</h4>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900 text-green-200 mt-2">
            Cuenta Activa
        </span>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
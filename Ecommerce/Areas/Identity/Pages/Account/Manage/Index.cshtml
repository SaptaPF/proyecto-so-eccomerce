@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de Usuario";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-2xl font-bold text-white mb-6 flex items-center">
    <i class="fas fa-user-circle mr-3 text-accent"></i> @ViewData["Title"]
</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-700">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <div>
            <form id="profile-form" method="post" class="space-y-5">

                <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm text-red-400 bg-gray-900 rounded-lg border border-red-800" role="alert"></div>

                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-400 mb-1">Nombre de Usuario</label>
                    <div class="relative">
                        <input asp-for="Username" class="block w-full pl-4 pr-10 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-gray-400 cursor-not-allowed sm:text-sm" disabled />
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-500"></i>
                        </div>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-300 mb-1">Número de Teléfono</label>
                    <input asp-for="Input.PhoneNumber" class="block w-full px-4 py-2.5 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-accent focus:border-transparent transition duration-200 sm:text-sm" placeholder="Ej: +51 999 999 999" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-red-400 text-xs mt-1 block"></span>
                </div>

                <div class="pt-2">
                    <button id="update-profile-button" type="submit" class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-lg shadow-sm text-sm font-bold text-gray-900 bg-accent hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition duration-300">
                        Guardar Cambios
                    </button>
                </div>

            </form>
        </div>

        <div class="hidden lg:flex flex-col items-center justify-center text-center p-6 bg-gray-900/50 rounded-lg border border-gray-700 border-dashed">
            <div class="w-24 h-24 bg-gray-800 rounded-full flex items-center justify-center mb-4 text-accent border-2 border-accent">
                <span class="text-3xl font-bold">
                    @User.Identity.Name?.Substring(0, 1).ToUpper()
                </span>
            </div>
            <h4 class="text-lg font-semibold text-white">@User.Identity.Name</h4>
            <p class="text-gray-400 text-sm mt-2">Gestiona tu información personal y seguridad desde este panel.</p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
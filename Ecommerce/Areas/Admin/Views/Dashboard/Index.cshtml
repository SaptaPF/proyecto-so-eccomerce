@model Ecommerce.Dtos.DashboardViewModel

@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 md:mt-16">
    <h1 class="text-3xl font-extrabold text-white mb-2">@ViewData["Title"]</h1>
    <p class="text-gray-400 mb-8">Resumen general de tu tienda.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">

        <div class="bg-gray-800 rounded-lg p-6 shadow-lg border-l-4 border-accent">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-gray-400 text-sm uppercase font-semibold">Ingresos Totales</p>
                    <h3 class="text-3xl font-bold text-white mt-1">@Model.TotalVentas.ToString("C")</h3>
                </div>
                <div class="p-3 bg-gray-700 rounded-full text-accent">
                    <i class="fas fa-coins fa-2x"></i>
                </div>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 shadow-lg border-l-4 border-yellow-500">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-gray-400 text-sm uppercase font-semibold">Pedidos Pendientes</p>
                    <h3 class="text-3xl font-bold text-white mt-1">@Model.PedidosPendientes</h3>
                </div>
                <div class="p-3 bg-gray-700 rounded-full text-yellow-500">
                    <i class="fas fa-clock fa-2x"></i>
                </div>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 shadow-lg border-l-4 border-blue-500">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-gray-400 text-sm uppercase font-semibold">Productos Activos</p>
                    <h3 class="text-3xl font-bold text-white mt-1">@Model.TotalProductos</h3>
                </div>
                <div class="p-3 bg-gray-700 rounded-full text-blue-500">
                    <i class="fas fa-box fa-2x"></i>
                </div>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg p-6 shadow-lg border-l-4 border-purple-500">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-gray-400 text-sm uppercase font-semibold">Clientes Registrados</p>
                    <h3 class="text-3xl font-bold text-white mt-1">@Model.TotalUsuarios</h3>
                </div>
                <div class="p-3 bg-gray-700 rounded-full text-purple-500">
                    <i class="fas fa-users fa-2x"></i>
                </div>
            </div>
        </div>
    </div>

    <h2 class="text-2xl font-bold text-white mb-6">Acciones Rápidas</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <a asp-area="Admin" asp-controller="ProductosAdmin" asp-action="Index"
           class="flex items-center p-6 bg-gray-800 rounded-lg hover:bg-gray-700 transition duration-300 group">
            <div class="p-4 bg-gray-900 rounded-lg text-accent group-hover:scale-110 transition duration-300">
                <i class="fas fa-box-open fa-2x"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-bold text-white group-hover:text-accent">Gestionar Productos</h3>
                <p class="text-gray-400 text-sm">Añadir o editar inventario</p>
            </div>
        </a>

        <a asp-area="Admin" asp-controller="CategoriasAdmin" asp-action="Index"
           class="flex items-center p-6 bg-gray-800 rounded-lg hover:bg-gray-700 transition duration-300 group">
            <div class="p-4 bg-gray-900 rounded-lg text-blue-400 group-hover:scale-110 transition duration-300">
                <i class="fas fa-tags fa-2x"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-bold text-white group-hover:text-blue-400">Categorías</h3>
                <p class="text-gray-400 text-sm">Organizar catálogo</p>
            </div>
        </a>

        <a asp-area="Admin" asp-controller="PedidosAdmin" asp-action="Index"
           class="flex items-center p-6 bg-gray-800 rounded-lg hover:bg-gray-700 transition duration-300 group">
            <div class="p-4 bg-gray-900 rounded-lg text-yellow-400 group-hover:scale-110 transition duration-300">
                <i class="fas fa-receipt fa-2x"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-bold text-white group-hover:text-yellow-400">Ver Pedidos</h3>
                <p class="text-gray-400 text-sm">Gestionar despachos</p>
            </div>
        </a>
    </div>
</div>
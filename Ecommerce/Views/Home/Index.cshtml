@model Ecommerce.Dtos.HomeViewModel
@{
    // El título que verá el _Layout.cshtml
    ViewData["Title"] = "Inicio";
}

<!-- 2. SECCIÓN HERO (PRODUCTO DEL MES) -->
@if (Model.ProductoDelMes != null)
{
    var heroProducto = Model.ProductoDelMes;
    <header class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 md:mt-16">
        <div class="flex flex-col md:flex-row items-center bg-gray-800 rounded-lg overflow-hidden">
            <!-- Texto Hero -->
            <div class="w-full md:w-1/2 p-8 md:p-12">
                <div class="text-sm font-semibold text-accent uppercase tracking-wider">Producto del Mes</div>
                <h1 class="text-4xl md:text-5xl font-extrabold text-white mt-4 leading-tight">
                    @heroProducto.Nombre
                </h1>
                <p class="mt-4 text-lg text-gray-300">
                    @heroProducto.Descripcion
                </p>
                <div class="mt-8 flex gap-4">
                    <a asp-controller="Productos" asp-action="Details" asp-route-id="@heroProducto.ProductoId" class="inline-block bg-accent text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:opacity-90 transition duration-300">
                        Ver Producto
                    </a>
                    <a asp-controller="Productos" asp-action="Index" class="inline-block bg-gray-700 text-white font-bold py-3 px-6 rounded-lg hover:bg-gray-600 transition duration-300">
                        Ver Catálogo
                    </a>
                </div>
                <div class="mt-8 flex space-x-8 text-white">
                    <!-- CALIFICACIÓN -->
                    <div>
                        <div class="text-2xl font-bold flex items-center">
                            @heroProducto.AverageRating.ToString("0.0")
                            <i class="fas fa-star text-accent ml-1 text-xl"></i>
                        </div>
                        <div class="text-sm text-gray-400">Calificación</div>
                    </div>

                    <!-- TOTAL DE RESEÑAS -->
                    <div>
                        <div class="text-2xl font-bold">
                            @heroProducto.ReviewCount
                        </div>
                        <div class="text-sm text-gray-400">Reseñas</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold">
                            @((heroProducto.ReviewCount * 12) + 50)+ <!-- Truco visual -->
                        </div>
                        <div class="text-sm text-gray-400">Ventas</div>
                    </div>
                </div>
            </div>
            <!-- Imagen Hero -->
            <div class="w-full md:w-1/2 h-64 md:h-auto">
                @if (!string.IsNullOrEmpty(heroProducto.ImagenUrl))
                {
                    <img class="w-full h-full object-cover rounded-lg shadow-2xl"
                         src="@heroProducto.ImagenUrl.Replace("\\", "/")"
                         alt="@heroProducto.Nombre">
                }
                else
                {
                    <img class="w-full h-full object-cover rounded-lg shadow-2xl"
                         src="https://placehold.co/800x600/111827/00e0b0?text=@heroProducto.Nombre"
                         alt="@heroProducto.Nombre">
                }
            </div>
        </div>
    </header>
}

<!-- 3. CATEGORÍAS POPULARES -->
@if (Model.CategoriasPopulares != null && Model.CategoriasPopulares.Any())
{
    <section class="container mx-auto px-4 sm:px-6 lg:px-8 mt-16 md:mt-24">
        <h2 class="text-3xl font-extrabold text-center text-white">Categorías Populares</h2>
        <p class="text-center text-gray-400 mt-2">Explora nuestra amplia selección de gadgets y accesorios tecnológicos</p>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-6 mt-12">
            @foreach (var categoria in Model.CategoriasPopulares)
            {
                <a asp-controller="Productos"
                   asp-action="Index"
                   asp-route-categoriaId="@categoria.CategoriaId"
                   class="flex flex-col items-center p-6 bg-gray-800 rounded-lg hover:bg-gray-700 transition duration-300">

                    <div class="w-16 h-16 bg-gray-900 rounded-full flex items-center justify-center">
                        <i class="fas fa-tag text-accent text-2xl"></i>
                    </div>
                    <span class="mt-4 font-semibold text-white">@categoria.Nombre</span>
                    <span class="text-sm text-gray-400">@categoria.CantidadProductos Productos</span>
                </a>
            }
        </div>
    </section>
}

<!-- 4. PRODUCTOS DESTACADOS -->
@if (Model.ProductosDestacados != null && Model.ProductosDestacados.Any())
{
    <section class="container mx-auto px-4 sm:px-6 lg:px-8 mt-16 md:mt-24">
        <h2 class="text-3xl font-extrabold text-center text-white">Productos Destacados</h2>
        <p class="text-center text-gray-400 mt-2">Los productos más populares seleccionados por nuestros expertos en tecnología</p>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
            @foreach (var producto in Model.ProductosDestacados)
            {
                <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col">
                    <div class="relative">
                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                        {
                            <img class="w-full h-56 object-cover"
                                 src="@producto.ImagenUrl.Replace("\\", "/")"
                                 alt="@producto.Nombre">
                        }
                        else
                        {
                            <img class="w-full h-56 object-cover"
                                 src="https://placehold.co/400x300/1F2937/00e0b0?text=@producto.Nombre"
                                 alt="@producto.Nombre">
                        }

                        <span class="absolute top-2 left-2 bg-accent text-white text-xs font-bold px-2 py-1 rounded">Destacado</span>
                    </div>
                    <div class="p-6 flex flex-col flex-grow">
                        <h3 class="text-lg font-semibold text-white truncate">@producto.Nombre</h3>
                        <div class="flex items-center mt-2">
                            @await Html.PartialAsync("_RatingStarsPartial", producto.AverageRating)
                            <span class="ml-2 text-sm text-gray-400">(@producto.ReviewCount)</span>
                        </div>
                        <div class="mt-4 flex items-baseline justify-between">
                            <div>
                                <span class="text-2xl font-bold text-white">@producto.Precio.ToString("C")</span>
                            </div>
                        </div>

                        <!-- Este botón ahora será encontrado por el script global -->
                        <button data-producto-id="@producto.ProductoId"
                                class="btn-add-to-cart mt-6 w-full text-center bg-accent text-white font-bold py-2 px-4 rounded-lg hover:opacity-90 transition duration-300">
                            <i class="fas fa-cart-plus mr-2"></i>Añadir al Carrito
                        </button>
                    </div>
                </div>
            }
        </div>
    </section>
}

<!-- 5. SECCIÓN DE RESEÑAS (DINÁMICA) -->
@if (Model.ResenasRecientes != null && Model.ResenasRecientes.Any())
{
    <section class="container mx-auto px-4 sm:px-6 lg:px-8 mt-16 md:mt-24">
        <h2 class="text-3xl font-extrabold text-center text-white">Lo que dicen nuestros clientes</h2>
        <p class="text-center text-gray-400 mt-2">Reseñas verificadas de clientes que confían en Smart Buy</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
            @foreach (var resena in Model.ResenasRecientes)
            {
                <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 rounded-full bg-accent flex items-center justify-center font-bold text-white text-lg">
                            @resena.InicialesCliente
                        </div>
                        <div class="ml-4">
                            <div class="font-semibold text-white">@resena.NombreCliente</div>
                            <div class="text-sm text-gray-400 flex items-center">
                                <i class="fas fa-check-circle text-green-500 mr-1"></i> Compra Verificada
                            </div>
                        </div>
                    </div>
                    <div class="flex text-accent mb-2">
                        @await Html.PartialAsync("_RatingStarsPartial", (double)resena.Rating)
                    </div>
                    <p class="text-gray-300 text-sm">
                        "@resena.Comentario"
                    </p>
                </div>
            }
        </div>
    </section>
}
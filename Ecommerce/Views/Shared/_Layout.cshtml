<!DOCTYPE html>
<html lang="es" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Smart Buy</title>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: { 'sans': ['Inter', 'sans-serif'] },
                    colors: {
                        dark: { '900': '#111111', '800': '#1a1a1a', '700': '#2a2a2a' },
                        accent: { 'DEFAULT': '#00e0b0', 'hover': '#00c49b' }
                    }
                }
            }
        }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #fff;
            font-family: 'Inter', sans-serif;
        }

        .dark body {
            background-color: #111111;
        }

        /* Clases de utilidad */
        .text-accent {
            color: #00e0b0;
        }

        .bg-accent {
            background-color: #00e0b0;
            color: #111111;
        }

            .bg-accent:hover {
                background-color: #00c49b;
            }

        .border-accent {
            border-color: #00e0b0;
        }

        .bg-gray-800 {
            background-color: #1a1a1a;
        }

        .bg-gray-900 {
            background-color: #111111;
        }

        .border-gray-800 {
            border-color: #1a1a1a;
        }

        .border-gray-700 {
            border-color: #2a2a2a;
        }

        #logoutForm button {
            background: none;
            border: none;
            padding: 0;
            cursor: pointer;
        }

        .btn-loading {
            cursor: not-allowed;
            opacity: 0.7;
        }
    </style>
</head>
<body class="dark bg-gray-900 text-gray-200 flex flex-col min-h-screen">

    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        string activeClass = "border-accent text-white inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium";
        string inactiveClass = "border-transparent text-gray-400 hover:border-gray-500 hover:text-white inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium";
    }

    <nav class="bg-gray-800 border-b border-gray-700 sticky top-0 z-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">

                <div class="flex items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="flex-shrink-0 flex items-center mr-6">
                        <i class="fas fa-bolt text-accent text-2xl mr-2"></i>
                        <span class="font-bold text-xl text-white">Smart Buy</span>
                    </a>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="@(currentController == "Home" && currentAction == "Index" ? activeClass : inactiveClass)">Home</a>
                        <a asp-area="" asp-controller="Productos" asp-action="Index" class="@(currentController == "Productos" ? activeClass : inactiveClass)">Productos</a>
                        <a asp-area="" asp-controller="Home" asp-action="Categorias" class="@(currentController == "Home" && currentAction == "Categorias" ? activeClass : inactiveClass)">Categorías</a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-area="" asp-controller="Pedidos" asp-action="Index" class="@(currentController == "Pedidos" ? activeClass : inactiveClass)">Mis Pedidos</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="border-transparent text-red-500 hover:border-red-500 hover:text-red-400 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-bold transition duration-300">
                                <i class="fas fa-user-shield mr-2"></i> Admin
                            </a>
                        }
                    </div>
                </div>

                <div class="flex-1 max-w-lg mx-4 hidden sm:block">
                    <form asp-area="" asp-controller="Productos" asp-action="Index" method="get" class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-500"></i>
                        </div>
                        <input type="search" name="busqueda" value="@ViewData["BusquedaActual"]" class="block w-full pl-10 pr-3 py-2 border border-gray-700 rounded-md leading-5 bg-gray-800 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-accent focus:border-accent sm:text-sm" placeholder="Buscar productos...">
                    </form>
                </div>

                <div class="flex items-center">
                    <a asp-area="" asp-controller="Carrito" asp-action="Index" id="cart-button" class="relative p-1 rounded-full text-gray-400 hover:text-white focus:outline-none mr-4">
                        <i class="fas fa-shopping-cart fa-lg"></i>
                        <span id="cart-item-count" class="absolute -top-2 -right-2 bg-red-600 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center" style="display: none;">0</span>
                    </a>
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </div>
    </nav>

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 mt-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <div class="flex items-center mb-4">
                        <i class="fas fa-bolt text-accent text-2xl mr-2"></i>
                        <span class="font-bold text-xl text-white">Smart Buy</span>
                    </div>
                    <p class="text-gray-400 text-sm">Tecnología a tu alcance.</p>
                </div>
                <div>
                    <h5 class="font-semibold text-white uppercase tracking-wider mb-4">Tienda</h5>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="text-gray-400 hover:text-white">Novedades</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Más Vendidos</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="font-semibold text-white uppercase tracking-wider mb-4">Empresa</h5>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="text-gray-400 hover:text-white">Sobre Nosotros</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Contacto</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="font-semibold text-white uppercase tracking-wider mb-4">Ayuda</h5>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="text-gray-400 hover:text-white">FAQ</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white">Términos</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-500 text-sm">&copy; @DateTime.Now.Year Smart Buy. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cartCountElement = document.getElementById('cart-item-count');
            const userIsLoggedIn = document.getElementById('logoutForm') !== null || document.getElementById('logout') !== null;

            async function updateCartCount() {
                if (!userIsLoggedIn) {
                    if(cartCountElement) cartCountElement.style.display = 'none';
                    return;
                }
                try {
                    const response = await fetch('/api/carrito/count');
                    if (response.ok) {
                        const data = await response.json();
                        if (data.count > 0) {
                            cartCountElement.textContent = data.count;
                            cartCountElement.style.display = 'flex';
                        } else {
                            cartCountElement.style.display = 'none';
                        }
                    }
                } catch (error) {
                    console.error('Error fetching cart count:', error);
                }
            }

            async function handleAddToCart(event) {
                const button = event.target.closest('.btn-add-to-cart');
                if (!button) return;

                event.preventDefault();
                if (!userIsLoggedIn) {
                    window.location.href = '/Identity/Account/Login';
                    return;
                }

                const productoId = button.dataset.productoId;
                const payload = { productoId: parseInt(productoId), cantidad: 1 };

                button.disabled = true;
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>...';

                try {
                    const response = await fetch('/api/carrito/add', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.ok) {
                        const data = await response.json();
                        if (data.nuevoConteo > 0) {
                            cartCountElement.textContent = data.nuevoConteo;
                            cartCountElement.style.display = 'flex';
                        }
                        button.innerHTML = '<i class="fas fa-check mr-2"></i>Listo';
                        setTimeout(() => {
                            button.innerHTML = originalHtml;
                            button.disabled = false;
                        }, 2000);
                    } else if (response.status === 401) {
                        window.location.href = '/Identity/Account/Login';
                    } else {
                        throw new Error('Error en la respuesta');
                    }
                } catch (error) {
                    console.error('Error añadiendo al carrito:', error);
                    button.innerHTML = 'Error';
                }
            }

            document.addEventListener('click', handleAddToCart);
            updateCartCount();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
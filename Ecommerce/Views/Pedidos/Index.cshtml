@model IEnumerable<Ecommerce.Dtos.PedidoListDto>

@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 md:mt-16">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-extrabold text-white">Historial de Pedidos</h1>
            <p class="text-gray-400 mt-1">Revisa el estado de tus compras recientes.</p>
        </div>
        <a asp-controller="Productos" asp-action="Index" class="text-accent hover:text-accent-hover font-medium transition duration-300">
            Seguir Comprando &rarr;
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="grid gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700 hover:border-gray-600 transition duration-300">
                    <div class="p-6 flex flex-col md:flex-row items-center justify-between gap-4">

                        <!-- Info Principal -->
                        <div class="flex-1">
                            <div class="flex items-center gap-3 mb-1">
                                <span class="text-lg font-bold text-white">Pedido #@item.PedidoId</span>
                                <span class="px-2 py-1 text-xs font-bold rounded uppercase tracking-wide
                                            @(item.Estado == "Completado" ? "bg-green-900 text-green-200" :
                                                                            item.Estado == "Cancelado" ? "bg-red-900 text-red-200" :
                                                                            "bg-yellow-900 text-yellow-200")">
                            @item.Estado
                        </span>
                    </div>
                    <div class="text-sm text-gray-400">
                        <i class="far fa-calendar-alt mr-1"></i> @item.FechaPedido.ToString("D")
                    </div>
                </div>

                        <!-- Total -->
                        <div class="text-right">
                            <div class="text-sm text-gray-400">Total</div>
                            <div class="text-xl font-bold text-accent">@item.TotalPedido.ToString("C")</div>
                        </div>

                        <!-- Botón Acción -->
                        <div>
                            <a asp-action="Details" asp-route-id="@item.PedidoId"
                               class="inline-block bg-gray-700 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition duration-300">
                                Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
                }
        </div>
    }
    else
    {
        <div class="text-center py-16 bg-gray-800 rounded-lg border border-gray-700">
            <div class="w-20 h-20 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-500">
                <i class="fas fa-shopping-bag fa-3x"></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Aún no has realizado pedidos</h3>
            <p class="text-gray-400 mb-6">¡Explora nuestro catálogo y encuentra algo increíble!</p>
            <a asp-controller="Productos" asp-action="Index" class="inline-block bg-accent text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:opacity-90 transition duration-300">
                Ir a la Tienda
            </a>
        </div>
    }
</div>
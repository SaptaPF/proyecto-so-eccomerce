@model Ecommerce.Dtos.PedidoDetailViewModel

@{
    ViewData["Title"] = $"Pedido #{Model.PedidoId}";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8 md:mt-16">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-white">Detalles del Pedido <span class="text-accent">#@Model.PedidoId</span></h1>
        <a asp-action="Index" class="text-gray-400 hover:text-white">&larr; Volver a mis pedidos</a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-gray-800 rounded-lg p-6 shadow">
                <h3 class="text-lg font-semibold text-white mb-4">Artículos</h3>
                <ul class="divide-y divide-gray-700">
                    @foreach (var item in Model.Items)
                    {
                        <li class="py-4 flex justify-between">
                            <div>
                                <p class="text-white font-medium">@item.ProductoNombre</p>
                                <p class="text-sm text-gray-400">Cantidad: @item.Cantidad x @item.PrecioUnitario.ToString("C")</p>
                            </div>
                            <div class="text-white font-bold">
                                @item.Subtotal.ToString("C")
                            </div>
                        </li>
                    }
                </ul>
                <div class="border-t border-gray-700 mt-4 pt-4 flex justify-between items-center">
                    <span class="text-lg text-white">Total Pagado</span>
                    <span class="text-2xl font-bold text-accent">@Model.TotalPedido.ToString("C")</span>
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="bg-gray-800 rounded-lg p-6 shadow">
                <h3 class="text-sm font-medium text-gray-400 uppercase tracking-wider mb-2">Estado</h3>
                <div class="text-xl font-bold text-white mb-4">@Model.Estado</div>

                <h3 class="text-sm font-medium text-gray-400 uppercase tracking-wider mb-2">Fecha</h3>
                <div class="text-white mb-4">@Model.FechaPedido.ToString("g")</div>

                <h3 class="text-sm font-medium text-gray-400 uppercase tracking-wider mb-2">Dirección de Envío</h3>
                <div class="text-white">@Model.DireccionEnvio</div>
            </div>
        </div>
    </div>
</div>